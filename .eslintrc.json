{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard", "prettier", "plugin:jsdoc/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "jsdoc/no-undefined-types": 1,
    "jsdoc/require-param-description": 0,
    "jsdoc/require-property-description": 0,
    "jsdoc/require-returns-description": 0,
    "jsdoc/tag-lines": 0
  },
  "plugins": ["jsdoc"]
}
